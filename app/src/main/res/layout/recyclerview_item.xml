<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/rectangle"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        >

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <!--상품명 텍스트 뷰-->
        <TextView
                android:id="@+id/tv_pName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="#42436A"
                android:text="BO7938D065" android:layout_marginStart="32dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="20dp"
                app:layout_constraintTop_toTopOf="parent"/>

        <!--상품 브랜드 텍스트 뷰-->
        <TextView
                android:id="@+id/tv_pBrand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#A0A1B4"
                android:text="ZARA" android:layout_marginStart="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_pName"/>

        <!--상품 사이즈 텍스트 뷰-->
        <TextView
                android:id="@+id/tv_pSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:text="90"
                android:textColor="#A0A1B4"
                app:layout_constraintStart_toEndOf="@+id/tv_pName" android:layout_marginStart="8dp"
                android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent"/>

        <!--상품 가격 텍스트 뷰-->
        <TextView
                android:id="@+id/tv_pPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="#FF2884"
                android:text="159,000"
                app:layout_constraintTop_toBottomOf="@+id/tv_pBrand" android:layout_marginStart="32dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/tv_pQuantityInfo" app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="8dp"/>

        <!--상품 수량 텍스트 뷰-->
        <TextView
                android:id="@+id/tv_pQuantityInfo"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:text="수량"
                android:textColor="#42436A"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="168dp"
                app:layout_constraintStart_toStartOf="parent"/>

        <!--상품 수량 안내 텍스트 뷰-->
        <TextView
                android:id="@+id/tv_pQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:text="10"
                android:textColor="#42436A"
                app:layout_constraintStart_toEndOf="@+id/tv_pQuantityInfo"
                android:layout_marginStart="12dp" android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <!--상품 이미지뷰-->
        <ImageView
                android:id="@+id/iv_pImg"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:adjustViewBounds="true"
                tools:srcCompat="@tools:sample/avatars[3]"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" android:layout_marginTop="12dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"/>

    </android.support.constraint.ConstraintLayout>
    
</android.support.v7.widget.CardView>
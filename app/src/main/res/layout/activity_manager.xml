<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        tools:context=".activities.manager.ManagerActivity">

    <com.ldcc.eleven.qrpick.qr.common.CameraSourcePreview
            android:id="@+id/firePreview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

    </com.ldcc.eleven.qrpick.qr.common.CameraSourcePreview>

    <com.ldcc.eleven.qrpick.qr.common.GraphicOverlay
            android:id="@+id/fireFaceOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QR코드 촬영"
            android:textColor="#EE6667"
            android:textStyle="bold"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_marginTop="120dp"
            app:layout_constraintTop_toTopOf="@+id/firePreview"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="130dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="똑똑한 쇼핑의 시작!"
            android:textColor="#F2F2F2"
            android:textStyle="bold"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_marginTop="140dp"
            app:layout_constraintTop_toTopOf="@+id/firePreview"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="110dp"/>

    <!--<android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/testlayout"
            >

    </android.support.constraint.ConstraintLayout>-->


</FrameLayout>
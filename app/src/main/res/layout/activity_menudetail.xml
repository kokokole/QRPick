<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.manager.MenudetailActivity">

    <TextView
            android:text="상품 수정/삭제"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:id="@+id/textView" android:layout_marginTop="44dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp" android:textSize="18sp"/>

    <TextView
            android:text="상품명"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintEnd_toStartOf="@+id/itemnm"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/itemnm" app:layout_constraintHorizontal_bias="0.524"/>


    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/itemnm"
            android:hint="상품명"
            app:layout_constraintStart_toStartOf="@+id/itemamount" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/textView7" app:layout_constraintEnd_toEndOf="@+id/itemamount"/>
    <TextView
            android:text="색상"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itemcolor"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="44dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintEnd_toStartOf="@+id/spinner"
            android:layout_marginEnd="8dp"/>

    <Spinner android:layout_width="173dp" android:layout_height="23dp"
             android:id="@+id/spinner" android:spinnerMode="dropdown" android:layout_marginTop="65dp"
             android:layout_marginBottom="65dp" app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintBottom_toTopOf="@+id/itemprice" app:layout_constraintTop_toTopOf="@+id/textView2"
             app:layout_constraintStart_toStartOf="parent"
            android:entries="@array/itemcolor"></Spinner>
    <Spinner android:layout_width="173dp" android:layout_height="21dp"
             android:id="@+id/spinner2" android:spinnerMode="dropdown" app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
            android:entries="@array/size"></Spinner>
    <TextView
            android:text="사이즈"
            android:layout_width="49dp"
            android:layout_height="18dp"
            android:id="@+id/textView4"
            android:layout_marginTop="42dp"
            app:layout_constraintEnd_toStartOf="@+id/spinner2" android:layout_marginBottom="43dp"
            app:layout_constraintBottom_toTopOf="@+id/textView5" app:layout_constraintTop_toTopOf="@+id/itemcolor"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="44dp" android:layout_marginEnd="40dp"/>
    <TextView
            android:text="가격"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" app:layout_constraintEnd_toStartOf="@+id/itemprice"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/itemprice"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/itemprice"
            android:hint="가격" app:layout_constraintStart_toStartOf="@+id/spinner2" android:layout_marginTop="11dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner2"/>
    <TextView
            android:text="수량"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:id="@+id/textView6" app:layout_constraintEnd_toStartOf="@+id/itemamount"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="@+id/itemnm"
            android:layout_marginTop="248dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="248dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/itemamount"
            android:hint="수량" android:layout_marginTop="18dp" app:layout_constraintTop_toBottomOf="@+id/itemprice"
            android:layout_marginEnd="3dp"
            app:layout_constraintEnd_toEndOf="@+id/itemprice"/>
    <TextView
            android:text="모델명"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:id="@+id/textView7"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/modelnm" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="156dp" app:layout_constraintHorizontal_bias="0.611"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/modelnm"
            android:hint="모델명" app:layout_constraintStart_toStartOf="@+id/itemnm"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/itemnm"/>
    <Button
            android:text="등록"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/insertbtn"
            app:layout_constraintTop_toTopOf="@+id/itemamount" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="116dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="160dp"
            android:layout_marginBottom="117dp" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="원"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:textSize="18sp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/itemprice"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="@+id/itemprice"/>
    <TextView
            android:text="개"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8" android:textSize="18sp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/itemamount"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="@+id/itemamount"/>


</android.support.constraint.ConstraintLayout>
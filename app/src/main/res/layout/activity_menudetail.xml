<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.manager.MenudetailActivity"
        android:background="@drawable/background">

    <Button android:layout_width="20dp" android:layout_height="20dp"
            android:background="@drawable/back"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="36dp"
            app:layout_constraintEnd_toStartOf="@+id/textView" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="상품 등록"
              android:textColor="#ffffff"
              android:textSize="30dp"
              android:textStyle="bold" android:layout_marginStart="8dp"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="28dp"
              app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.498"
              android:id="@+id/textView"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  android:layout_marginTop="90dp" android:layout_marginBottom="60dp"
                  android:background="@drawable/card">    </LinearLayout>


    <TextView
            android:text="상품명"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.112"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/textView7"/>


    <EditText
            android:layout_width="219dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/itemnm"
            android:hint="상품명"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            android:layout_marginStart="8dp" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/modelnm" app:layout_constraintHorizontal_bias="0.473"
    />
    <TextView
            android:text="색상"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itemcolor"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="5dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.13"
            android:layout_marginTop="35dp" app:layout_constraintTop_toBottomOf="@+id/textView2"/>

    <EditText android:layout_width="219dp" android:layout_height="wrap_content" android:hint="색상"
              android:id="@+id/spinner" android:spinnerMode="dropdown"
              android:layout_marginEnd="8dp"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginTop="12dp"
              app:layout_constraintTop_toBottomOf="@+id/itemnm"
              app:layout_constraintStart_toEndOf="@+id/itemcolor" android:layout_marginStart="8dp"/>


    <EditText android:layout_width="219dp" android:layout_height="wrap_content"
              android:id="@+id/spinner2" android:spinnerMode="dropdown"
              android:hint="사이즈"
              android:layout_marginStart="8dp"
              android:layout_marginEnd="8dp"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginTop="4dp" app:layout_constraintTop_toBottomOf="@+id/spinner"
              app:layout_constraintStart_toEndOf="@+id/textView4" app:layout_constraintHorizontal_bias="0.43"/>


    <TextView
            android:text="사이즈"
            android:layout_width="49dp"
            android:layout_height="18dp"
            android:id="@+id/textView4"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="44dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/itemcolor" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="가격"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="5dp"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.13"/>
    <EditText
            android:layout_width="219dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/itemprice"
            android:hint="가격" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner2"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/textView5"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.48"/>
    <TextView
            android:text="수량"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.13"/>
    <EditText
            android:layout_width="219dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/itemamount"
            android:hint="수량" android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/itemprice"
            app:layout_constraintStart_toEndOf="@+id/textView6" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.47"/>
    <TextView
            android:text="모델명"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:id="@+id/textView7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="132dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.131"/>
    <EditText
            android:layout_width="219dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/modelnm"
            android:hint="모델명"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            android:layout_marginStart="4dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.489"
            android:layout_marginTop="115dp"
            app:layout_constraintTop_toTopOf="parent"
    />
    <Button

            android:text="등    록"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/insertbtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="72dp"
            android:layout_marginBottom="72dp"
            android:background="@drawable/btn" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="원"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:textSize="18sp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/itemprice"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="@+id/itemprice"/>
    <TextView
            android:text="개"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8" android:textSize="18sp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/itemamount"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="@+id/itemamount"/>

    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/guideline4" app:layout_constraintGuide_end="395dp"/>


    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/guideline3" app:layout_constraintGuide_end="61dp"/>

</android.support.constraint.ConstraintLayout>